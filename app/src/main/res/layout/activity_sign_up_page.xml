<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SignInPage">
    <ImageView
        android:id="@+id/sign_up_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/sign_up"
        ></ImageView>
    <TextView
        android:id="@+id/greeting_hi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="HI!"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/welcome_back_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/first_name_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="First Name:"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:hint="Enter first name here"
        ></EditText>

    <TextView
        android:id="@+id/last_name_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="Last Name:"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
    <EditText
        android:id="@+id/edit_text_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:hint="Enter last name here"
        ></EditText>
    <TextView
        android:id="@+id/email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="Email:"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
    <EditText
        android:id="@+id/edit_text_email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:hint="Enter email here"
        ></EditText>
    <TextView
        android:id="@+id/password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="Password:"
        android:textColor="@color/blue_sign_in"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
    <EditText
        android:id="@+id/edit_text_password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:hint="Enter password here"
        android:inputType="textPassword"
        ></EditText>
    <Button
        android:id="@+id/ButtonCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Create"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        ></Button>


</LinearLayout>